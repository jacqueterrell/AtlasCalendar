<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.team.mamba.atlas.userInterface.welcome.welcomeScreen.WelcomeViewModel" />

    </data>

<LinearLayout
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="gone"
    >

    <TextView
        style="@style/App_Text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/business_login_title"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="15dp"
        android:singleLine="true"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="15dp"
        android:singleLine="true"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">


        <android.support.v7.widget.CardView
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:innerRadius="0dp"
            android:shape="ring"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="7dp"
            card_view:cardElevation="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="7dp"
                card_view:cardElevation="0dp">


                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/lato"
                    android:onClick="@{()-> viewModel.onBusinessScreenLearnMoreClicked()}"
                    android:text="Learn More"
                    android:textAllCaps="false"
                     />

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:innerRadius="0dp"
            android:shape="ring"
            app:cardBackgroundColor="#E0A850"
            app:cardCornerRadius="7dp"
            card_view:cardElevation="0dp">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/lato"
                android:onClick="@{()-> viewModel.onBusinessScreenLoginClicked()}"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>

</layout>