<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind = "http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.team.mamba.atlas.userInterface.welcome.welcomeScreen.WelcomeViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/welcome_background" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_gravity="end"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/welcome_logo_500" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_arrow_right_white" />

        <TextView
            android:id="@+id/tv_business_login"
            android:fontFamily="@font/lato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="15dp"
            android:background="?attr/selectableItemBackground"
            android:text="Business Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:onClick = "@{()-> viewModel.onBusinessLoginClicked()}"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="105dp"
            android:orientation="vertical">

            <TextView
                style="@style/App_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                style="@style/App_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:focusableInTouchMode="false"
                android:text="Engage Your Network"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="75dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/super_transparent_white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/super_transparent_white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/super_transparent_white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/super_transparent_white"
                    app:cardCornerRadius="5dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="7dp"
                card_view:cardElevation="0dp">

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="#E0A850"
                    app:cardCornerRadius="7dp"
                    card_view:cardElevation="0dp">


                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:text="Start"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato"
                        android:onClick = "@{()-> viewModel.onStartButtonClicked()}"
                        />

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <include
            android:id="@+id/dialog_verify_age"
            layout="@layout/verify_age_dialog"
            bind:viewModel="@{viewModel}" />

        <include
            android:id="@+id/dialog_enter_first_name"
            layout="@layout/enter_first_name_dialog"
            bind:viewModel = "@{viewModel}"/>

        <include
            android:id="@+id/dialog_enter_last_name"
            layout="@layout/enter_last_name_dialog"
            bind:viewModel = "@{viewModel}"/>

        <include
            android:id="@+id/dialog_enter_phone_number"
            layout="@layout/enter_phone_number_dialog"
            bind:viewModel = "@{viewModel}"/>


    </FrameLayout>

</layout>