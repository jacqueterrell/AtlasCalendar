<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.team.mamba.atlas.userInterface.welcome.welcomeScreen.WelcomeViewModel" />

    </data>


    <FrameLayout
        android:id="@+id/layout_first_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/img_view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/welcome_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_open_welcome_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:onClick="@{()-> viewModel.onFirstNamePreviousClicked()}"
                android:orientation="horizontal"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_left_white" />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1 of 3"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                style="@style/App_Text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/first_name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                android:textSize="25sp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:theme="@style/TextAppearance.EditText"
                app:hintEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:fontFamily="@font/lato"
                    android:hint="First Name"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textColor="@color/white" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="75dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/super_transparent_white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/super_transparent_white"
                    app:cardCornerRadius="4dp"
                    card_view:cardElevation="0dp">

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/material_icons_light"
                app:cardCornerRadius="7dp"
                card_view:cardElevation="0dp">

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/transparent_white"
                    app:cardCornerRadius="7dp"
                    card_view:cardElevation="0dp">


                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:fontFamily="@font/lato"
                        android:onClick="@{()-> viewModel.onFirstNameNextClicked()}"
                        android:text="Next"
                        android:textAllCaps="false" />

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </FrameLayout>


</layout>