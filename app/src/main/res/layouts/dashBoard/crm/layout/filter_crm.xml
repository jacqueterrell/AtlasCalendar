<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.team.mamba.atlas.userInterface.dashBoard.Crm.main.CrmViewModel" />

    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
        style="@style/App_Text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="17sp"
        android:text="Status"
            android:layout_marginBottom="10dp"/>



        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/seek_bar_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tsb_ticks_count="5"
            app:tsb_thumb_color="@color/chart_blue"
            app:tsb_thumb_size="16dp"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_tick_marks_color="@color/chart_blue"
            app:tsb_tick_marks_size="8dp"
            app:tsb_show_tick_texts="above"
            app:tsb_tick_texts_color="@color/black"
            app:tsb_tick_texts_size="10sp"
            app:tsb_track_background_color="@color/chart_blue"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/chart_blue"
            app:tsb_track_progress_size="3dp"
            app:tsb_tick_texts_array="@array/status_array"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            style="@style/App_Text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textSize="17sp"
            android:text="Opportunity"
            android:layout_marginBottom="10dp"/>

        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/seek_bar_opportunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tsb_ticks_count="3"
            app:tsb_thumb_color="@color/chart_blue"
            app:tsb_thumb_size="16dp"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_tick_marks_color="@color/chart_blue"
            app:tsb_tick_marks_size="8dp"
            app:tsb_show_tick_texts="above"
            app:tsb_tick_texts_color="@color/black"
            app:tsb_tick_texts_size="10sp"
            app:tsb_track_background_color="@color/chart_blue"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/chart_blue"
            app:tsb_track_progress_size="3dp"
            app:tsb_tick_texts_array="@array/opportunity_array"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <TextView
            style="@style/App_Text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textSize="17sp"
            android:text="Next Step"
            android:layout_marginBottom="10dp"/>


        <com.warkiz.tickseekbar.TickSeekBar
            android:id="@+id/seek_bar_next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tsb_ticks_count="4"
            app:tsb_thumb_color="@color/chart_blue"
            app:tsb_thumb_size="16dp"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_tick_marks_color="@color/chart_blue"
            app:tsb_tick_marks_size="8dp"
            app:tsb_show_tick_texts="above"
            app:tsb_tick_texts_color="@color/black"
            app:tsb_tick_texts_size="10sp"
            app:tsb_track_background_color="@color/chart_blue"
            app:tsb_track_background_size="2dp"
            app:tsb_track_progress_color="@color/chart_blue"
            app:tsb_track_progress_size="3dp"
            app:tsb_tick_texts_array="@array/next_step_array"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/iv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_24dp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>

</layout>