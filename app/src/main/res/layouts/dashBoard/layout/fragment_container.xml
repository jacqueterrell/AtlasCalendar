<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"    >

    <data>

        <import type = "android.view.View"/>

        <variable
            name = "viewModel"
            type = "com.team.mamba.atlas.userInterface.dashBoard._container_activity.DashBoardActivityViewModel"/>

    </data>

    <FrameLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id = "@+id/fragment_container"
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                >

            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <ImageView
                    android:id="@+id/iv_info_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_tachometer_solid"
                    />

                <ImageView
                    android:id="@+id/iv_info_not_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_tachometer_solid"
                    android:tint="@color/grey"
                    android:onClick="@{()-> viewModel.onInfoClicked()}"
                    android:visibility="gone"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_contacts_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_address_book_solid"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/iv_contacts_not_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_address_book_solid"
                    android:tint="@color/material_icon"
                    android:onClick="@{()-> viewModel.onContactsClicked()}"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/iv_crm_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_pie_chart"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/iv_crm_not_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_pie_chart"
                    android:tint="@color/material_icon"
                    android:onClick="@{()-> viewModel.onCrmClicked()}"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/iv_notifications_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_bell_solid"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/iv_notifications_not_selected"
                    style="@style/IconImageView"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_bell_solid"
                    android:tint="@color/material_icon"
                    android:onClick="@{()-> viewModel.onNotificationsClicked()}"
                    />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dialog_add_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="55dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Contact"
                        android:textAlignment="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        android:textSize="17sp"
                        android:layout_margin="15dp"

                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:textAlignment="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:text="@string/add_contact_body"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_icons_light"/>

                    <Button
                        android:id="@+id/btn_add_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:text="User"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lato"
                        android:onClick="@{()-> viewModel.onAddUserClicked()}"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_icons_light"/>

                    <Button
                        android:id="@+id/btn_add_business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:text="Org/Business"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lato"
                        android:onClick="@{()-> viewModel.onAddBusinessClicked()}"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_icons_light"/>

                    <Button
                        android:id="@+id/btn_invite_to_atlas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:text="Invite to Atlas"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lato"
                        android:onClick="@{()-> viewModel.onInviteToAtlasClicked()}"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_icons_light"/>

                    <Button
                        android:id="@+id/btn_find_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:text="Find Users on Atlas"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lato"
                        android:onClick="@{()-> viewModel.onFindUsersClicked()}"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_icons_light"/>

                    <Button
                        android:id="@+id/btn_suggested_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:text="Suggested Contacts"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lato"
                        android:onClick="@{()-> viewModel.onAddSuggestedContactsClicked()}"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_icons_light"/>

                    <Button
                        android:id="@+id/btn_cancel_add_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lato"
                        android:textStyle="bold"
                        android:onClick="@{()-> viewModel.onCancelAddDialogClicked()}"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <include
            android:id="@+id/dialog_settings"
            layout="@layout/settings_layout"
            bind:viewModel="@{viewModel}" />


    </FrameLayout>

</layout>