<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.team.mamba.atlas.userInterface.dashBoard.user_profile.UserProfileViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/iv_settings"
            style="@style/IconImageView"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{()-> viewModel.onSettingsClicked()}"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_settings" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp">

                <FrameLayout
                    android:id="@+id/layout_user_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp">


                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="end"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/material_icons_light"
                        app:cardCornerRadius="50dp"
                        card_view:cardElevation="0dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_person" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{()-> viewModel.onProfileImageClicked()}" />


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginBottom="5dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit" />

                    </android.support.v7.widget.CardView>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@id/layout_user_image"
                    android:layout_toRightOf="@id/layout_user_image"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    tools:text="Matt Maher" />

                <TextView
                    android:id="@+id/user_code_desc"
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/layout_user_image"
                    android:layout_toRightOf="@id/layout_user_image"
                    android:text="My ID: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_user_code"
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_toEndOf="@id/user_code_desc"
                    android:layout_toRightOf="@id/user_code_desc"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    tools:text="20" />

            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="25dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="(Cell)" />


                        <TextView
                            android:id="@+id/tv_cell_phone"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="217-317-1667" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />


                        <android.support.v7.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="1dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="(Office)" />


                        <TextView
                            android:id="@+id/tv_office_phone"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="(Home)" />


                        <TextView
                            android:id="@+id/tv_home_phone"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="(Personal)" />


                        <TextView
                            android:id="@+id/tv_personal_phone"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Fax" />


                        <TextView
                            android:id="@+id/tv_fax_phone"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Personal Email" />

                        <TextView
                            android:id="@+id/tv_personal_email"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <android.support.v7.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Work Email" />


                        <TextView
                            android:id="@+id/tv_work_email"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Home Address" />


                        <TextView
                            android:id="@+id/tv_home_address"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="2366" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <android.support.v7.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Work Address" />


                        <TextView
                            android:id="@+id/tv_work_address"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                    </LinearLayout>

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work History"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">


                        <TextView
                            android:id="@+id/tv_work_history"
                            style="@style/App_Text_view"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            tools:text="Rural King Android" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <android.support.v7.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">


                        <TextView
                            android:id="@+id/tv_education"
                            style="@style/App_Text_view"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            tools:text="..." />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <android.support.v7.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</layout>