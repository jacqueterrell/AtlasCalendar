<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.team.mamba.atlas.userInterface.dashBoard.profile.contacts_profile.notes.ContactNotesViewModel" />

        <variable
            name = "personalNotes"
            type = "com.team.mamba.atlas.data.model.api.PersonalNotes"/>

    </data>

    <FrameLayout
        android:id="@+id/layout_contact_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:id="@+id/tv_name"
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="20sp"
                    tools:text="Matt Maher"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>


                <FrameLayout
                    android:id="@+id/layout_user_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp">


                    <android.support.v7.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="end"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="45dp"
                        card_view:cardElevation="0dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_person" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            />


                    </android.support.v7.widget.CardView>


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_edit_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{()-> viewModel.onEditDetailsClicked()}"
                >

                <TextView
                    android:id="@+id/tv_position"
                    android:fontFamily="@font/lato_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Details"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <android.support.v7.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit" />

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="5dp"
                        >

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connection"
                            android:layout_gravity="center_vertical"
                            />

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/ic_info_circle_solid"
                            android:tint="@color/grey"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="10dp"
                            android:layout_marginRight="10dp"
                            android:onClick="@{()-> viewModel.onConnectionInfoClicked()}"
                            />

                        <TextView
                            android:id="@+id/tv_connection_type"
                            style="@style/App_Text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Personal Friend"
                            android:layout_gravity="center_vertical"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        >

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Connected" />


                        <TextView
                            android:id="@+id/tv_connection_date"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            tools:text="Aug 20, 2018" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        >

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Location" />


                        <TextView
                            android:id="@+id/tv_location"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text = "@{personalNotes.getWhereMet()}"
                            tools:text="..." />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        >

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="How" />


                        <TextView
                            android:id="@+id/tv_how"
                            style="@style/App_Text_view"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text = "@{personalNotes.getHowMet()}"
                            tools:text="..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        >

                        <TextView
                            style="@style/App_Text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Notes"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            />

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/ic_info_circle_solid"
                            android:tint="@color/grey"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="10dp"
                            android:onClick="@{()-> viewModel.onNotesInfoClicked()}"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_personal_notes"
                        style="@style/App_Text_view"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text = "@{personalNotes.getDetailsToString()}"
                        tools:text="..." />


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/dialog_connection_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black_dark"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="gone"
            android:onClick="@{()-> viewModel.hideConnectionInfoDialog()}"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="55dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:contentPadding="15dp"
                card_view:cardElevation="1dp">

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_type_info"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

            </android.support.v7.widget.CardView>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/dialog_personal_notes_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black_dark"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="gone"
            android:onClick="@{()-> viewModel.hidePersonalNotesInfoDialog()}"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="55dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:contentPadding="15dp"
                card_view:cardElevation="1dp">

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_notes_info"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

            </android.support.v7.widget.CardView>


        </FrameLayout>



    </FrameLayout>

</layout>